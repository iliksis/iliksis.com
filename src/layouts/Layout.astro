---
import { Image } from "astro:assets";
import darkAstro from "../images/astro-icon-dark.png";
import lightAstro from "../images/astro-icon-light.png";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/iliksis-pb.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="relative bg-zinc-800 text-zinc-200 md:max-w-xl max-w-80 mx-auto my-0 h-svh lowercase font-inter"
  >
    <header class="mb-6">
      <nav>
        <ul class="flex justify-center gap-4 p-4">
          <li>
            <a href="/">Home</a>
          </li>
          <li class="group relative cursor-default">
            Socials
            <ul
              class="px-3 invisible opacity-0 group-hover:visible group-hover:opacity-100 absolute transition-all"
            >
              <li>
                <a
                  href="https://twitter.com/iliksis"
                  target="_blank"
                  aria-label="Link to the iliksis twitter profile">Twitter</a
                >
              </li>
              <li>
                <a
                  href="https://bsky.app/profile/iliksis.com"
                  target="_blank"
                  aria-label="Link to the iliksis bsky profile">Bluesky</a
                >
              </li>
              <li>
                <a
                  href="https://www.youtube.com/@iliksis"
                  target="_blank"
                  aria-label="Link to the iliksis youtube profile">YouTube</a
                >
              </li>
            </ul>
          </li>
        </ul>
      </nav>
    </header>
    <main class="overflow-auto">
      <slot />
    </main>
    <footer class="fixed mb-1 left-0 bottom-0 w-full text-center text-zinc-500">
      Built with <a
        href="https://astro.build"
        target="_blank"
        aria-label="Link to Astro"
        ><Image
          alt="The Astro logo"
          src={lightAstro}
          height={20}
          width={20}
          class="hidden dark:inline opacity-50 hover:opacity-100 transition-all"
          loading="eager"
        />
        <Image
          alt="The Astro logo"
          src={darkAstro}
          height={20}
          width={20}
          class="dark:hidden inline opacity-50 hover:opacity-100 transition-all"
          loading="eager"
        />
      </a> on <a
        href="https://github.com/iliksis/iliksis.com"
        target="_blank"
        class="hover:text-zinc-200 transition-all">github</a
      >
    </footer>
  </body>
</html>
